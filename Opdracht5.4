using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Opdracht_4
{
    class Program
    {
        static void Main(string[] args)
        {
            //variabelen
            int jaar;
            double rest = 0;

            //geef je jaar
            Console.WriteLine("Geef het jaar waarvan je wilt weten of het een scrikkeljaar is:");
            jaar = Convert.ToInt16(Console.ReadLine());

            //reken uit of het een schrikkeljaar is
            rest = (jaar % 4);
            if (rest == 0)
            {
                Console.WriteLine("Het is een schrikkel jaar.");
            }
            else
            {
                Console.WriteLine("Het is geen schrikkel jaar.");
            }
            Console.ReadKey();
        }
    }
}
